{{#extend "stylesheets"}}
<style>

.login{
  background: url("https://www.designyourway.net/blog/wp-content/uploads/2020/04/photo-1551002605-0b3007f9dec7.jpg") no-repeat;
  background-size: cover;
  width: 100%; 
  height: 100%;
  background-size: cover;
  position: absolute;
  bottom: 0;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  padding: 0 15px;
}

form {
  width: 42%;
  height: 75%;
  margin: 72px auto;
  background: rgba(2, 2, 2, 0.1);
  padding: 60px 120px 80px 120px;
  text-align: center;
  border-radius: 15px;
  border: 3px solid beige;
  border-width: thin;
}

.title{
  color: white;
  position: relative;
  font-size: 32px;
  top: 125px;
  font-family: 'Pangolin', cursive; 
  font-weight: 600;
}

.logbtn {
  background-color: #fad977;
  color: black;
  font-family: 'Pangolin', cursive;
  text-align: center;
  text-decoration: none;
  border: none;
  border-radius: 42px;
  padding: 10px 35px;
  background-size: 200% auto;
  box-sizing: border-box;
  margin-right: 12px;
}

.signbtn {
  background-color: #fad977;
  color: black;
  font-family: 'Pangolin', cursive;
  text-align: center;
  text-decoration: none;
  border: none;
  border-radius: 42px;
  padding: 10px 35px;
  background-size: 200% auto;
  box-sizing: border-box;
}

.link, .link:hover {
  color: black;
  text-decoration: none;
}

.signbtn:hover , .logbtn:hover {
  background: white;
}

.cancelbtn {
  width: auto;
  padding: 10px 18px;
  background-color: #f44336;
}

.imgcontainer {
  text-align: center;
}

img.avatar {
  width: 100px;
  height: 100px;
  filter: brightness(0) invert(1);
}

label {
  display: block;
  position: relative;
  margin: 40px 0px;
  font-family: 'Pangolin', cursive;
}

.label-txt {
  position: absolute;
  top: -1.6em;
  padding: 10px;
  font-family: 'Pangolin', cursive;
  font-size: 16px;
  letter-spacing: 1px;
  color: rgb(236, 235, 235);
  transition: ease .3s;
}

.input {
  width: 100%;
  padding: 15px;
  background: transparent;
  border: none;
  outline: none;
  font-size: 15px;
  color: white;
}

.line-box {
  position: relative;
  width: 100%;
  height: 2px;
  background: #BCBCBC;
}

.line {
  position: absolute;
  width: 0%;
  height: 2px;
  top: 0px;
  left: 50%;
  transform: translateX(-50%);
  background: #a9ee5a;
  transition: ease .6s;
}

.input:focus + .line-box .line {
  width: 100%;
  outline: none;
}

.input:-webkit-autofill,
.input:-webkit-autofill:hover, 
.input:-webkit-autofill:focus, 
.input:-webkit-autofill:active  {
  transition: background-color 5000s;
  -webkit-text-fill-color: #fff !important;
}

.label-active {
  top: -3em;
}

.reqlink:hover {
  color: #ffb727;
  text-decoration: none;
}

.reqlink {
  color: white;
}

.home { 
  padding-top: 10px;
  font-family: 'Pangolin', cursive;
  font-size: 20px;
}

.container {
  padding: 0px;
}

span.psw {
  float: right;
  padding-top: 16px;
}

/* Change styles for span and cancel button on extra small screens */
@media screen and (max-width: 300px) {
  span.psw {
     display: block;
     float: none;
  }
  .cancelbtn {
     width: 100%;
  }
}
</style>
{{/extend}}
{{> header}}
<div class="login">
<div class="title">Sign In</div>

<form action="/login/check" method="post">
  <div class="imgcontainer">
    <img src="https://cdn.onlinewebfonts.com/svg/img_237553.png" alt="Avatar" class="avatar">
  </div>

  <div class="container">
    <label for="uname">
    <p class="label-txt">USERNAME</p>
    <input type="text" class="input" placeholder="USERNAME" name="username" required>
    <div class="line-box">
      <div class="line"></div>
    </div>
    </label>
    

    <label for="psw"><p class="label-txt">PASSWORD</p>
    <input type="password" class="input" placeholder="PASSWORD" name="password" required>
    <div class="line-box">
      <div class="line"></div>
    </div>
    </label>
        
    <button type="submit" class="logbtn">Log In</button>
    <button type="button" class="signbtn"><a href="/register" class="link">Sign Up</a></button>
    <div class="home">
</div>
  </div>

    
</form>

</div>

{{#extend "scripts"}}

{{/extend}}
